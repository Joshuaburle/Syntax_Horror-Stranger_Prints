#!/usr/bin/env bash
# chemin home utilisé : /home/frxjoan
import tkinter as tk
from functools import partial
from PIL import Image, ImageTk

STORY = {
    # ...existing code...
}

root = tk.Tk()
root.title("Terminal - JeanMichel")
root.geometry("600x400")
root.configure(bg='black')

# Frame pour l'image en haut à gauche
image_frame = tk.Frame(root, bg='black')
image_frame.pack(anchor='nw', padx=20, pady=20)

# Chargement et affichage de l'image
try:
    image = Image.open("images/votre_image.png")  # Remplacer par votre image
    image = image.resize((100, 100))  # Ajuster la taille selon besoin
    photo = ImageTk.PhotoImage(image)
    image_label = tk.Label(
        image_frame,
        image=photo,
        bg='black'
    )
    image_label.image = photo  # Garder une référence
    image_label.pack()
except:
    print("Erreur: Image non trouvée")

# Style terminal (texte)
text_var = tk.StringVar()
text_label = tk.Label(
    root, 
    textvariable=text_var, 
    wraplength=540,
    justify="left",
    padx=20,
    pady=20,
    bg='black',
    fg='#00ff00',
    font=('Courier', 12)
)
text_label.pack(fill="both", expand=True)